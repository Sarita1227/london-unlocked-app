# Platform Configuration
# Set PLATFORM to 'android' or 'ios'
PLATFORM=android

# App Installation Mode
# USE_EXPO_GO=true for development with Expo Go app
# USE_EXPO_GO=false for standalone APK
USE_EXPO_GO=true

# Use installed app (don't reinstall)
USE_INSTALLED_APP=true

# Appium Server Settings
APPIUM_HOST=localhost
APPIUM_PORT=4723

# Device Settings
ANDROID_DEVICE_NAME=emulator-5554

# Optional: Custom APK path
# ANDROID_APP_PATH=./apps/android/app-debug.apk
