{
  "name": "london-unlocked-tests",
  "version": "1.0.0",
  "description": "Test Automation Framework for London Unlocked - React Native Mobile App",
  "main": "index.js",
  "scripts": {
    "scaffold": "ts-node scripts/cly.ts scaffold",
    "test": "USE_EXPO_GO=false wdio run ./wdio.conf.ts",
    "test:all": "USE_EXPO_GO=false wdio run ./wdio.conf.ts -- --mochaOpts.grep '@test'",
    "test:android": "PLATFORM=android USE_EXPO_GO=false wdio run ./wdio.conf.ts",
    "test:ios": "PLATFORM=ios wdio run ./wdio.conf.ts",
    "test:android:cloud": "PLATFORM=android TEST_ENV=browserstack USE_EXPO_GO=false wdio run ./wdio.conf.ts",
    "test:ios:cloud": "PLATFORM=ios TEST_ENV=browserstack wdio run ./wdio.conf.ts",
    "test:sanity": "USE_EXPO_GO=false wdio run ./wdio.conf.ts -- --mochaOpts.grep '@sanity'",
    "test:auth": "USE_EXPO_GO=false wdio run ./wdio.conf.ts --spec ./src/tests/auth.test.ts",
    "test:guest": "USE_EXPO_GO=false wdio run ./wdio.conf.ts --spec ./src/tests/guestUserJourney.test.ts",
    "test:installed": "USE_EXPO_GO=false USE_INSTALLED_APP=true wdio run ./wdio.conf.ts -- --mochaOpts.grep '@sanity'",
    "build:android": "./scripts/build-android.sh",
    "report:generate": "npx allure generate reports/allure-results --clean -o reports/html-reports/manual-report",
    "report:open": "open reports/html-reports/latest/index.html || xdg-open reports/html-reports/latest/index.html",
    "clean": "rm -rf reports/allure-results/* reports/html-reports/*",
    "clean:all": "rm -rf reports/ node_modules/ apps/",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "appium",
    "webdriverio",
    "typescript",
    "react-native",
    "mobile-automation",
    "test-automation",
    "mocha",
    "allure-report"
  ],
  "author": "Sarita Dash",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@wdio/allure-reporter": "^9.21.0",
    "@wdio/appium-service": "^8.27.0",
    "@wdio/cli": "^8.27.0",
    "@wdio/junit-reporter": "^9.21.0",
    "@wdio/local-runner": "^8.27.0",
    "@wdio/mocha-framework": "^8.27.0",
    "@wdio/spec-reporter": "^8.27.0",
    "allure-commandline": "^2.36.0",
    "appium": "^2.4.1",
    "appium-uiautomator2-driver": "^2.34.1",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "wdio-json-reporter": "^4.0.1",
    "wdio-reportportal-reporter": "^7.6.0",
    "wdio-wait-for": "^3.0.9"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
